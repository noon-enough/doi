.wrapper .area-op-content .timer {
    margin-top: 60rpx;
    font-size: 100rpx;
    font-weight: bolder;
}

.wrapper .area-op-content .options {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 60rpx;
}

.wrapper .area-op-content .options .left {
    display: flex;
    flex-direction: column;
    margin-right: 40rpx;
    justify-content: center;
    align-items: center;
}

.wrapper .area-op-content .options .right {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
    justify-content: center;
    align-items: center;
}


/*https://ashe-1251170538.cos.ap-beijing.myqcloud.com/doi/icons/pause.svg*/
