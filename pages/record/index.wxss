.wrapper .area-op-content .options .replay,
.wrapper .area-op-content .options .pause {
    width: 80rpx;
    height: 80rpx;
}

.wrapper .area-op-content .options .name {
    font-size: 30rpx;
    margin-top: 20rpx;
    color: var(--secondary);
