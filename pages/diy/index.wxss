.container {
    padding: 20rpx;
}

.canvas-container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container .diy-canvas {
    height: 300px;
    width: 300px;
}

.canvas-tools {
    display: flex;
    justify-items: center;
    align-items: center;
    justify-content: center;
    align-content: center;
    margin-bottom: 10rpx;
}

.container .btn{
    padding: 10rpx 20rpx;
    float:left;
    margin:10rpx;
    /*border:solid 1px #dfdfdf;*/
    /*border-radius: 10rpx;*/
}

.picker {
    padding-bottom: 200rpx;
}


.block {

    width: 100vw;
    height: auto;
    background: #fff;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

.wrapper {
    margin: 32rpx;
    display: block;
}

.header {
    display: flex;
    align-items: center;
    height: 116rpx;
}

.title {
    flex: 1;
    text-align: center;
    font-weight: 600;
    font-size: 36rpx;
}

.btn {
    font-size: 32rpx;
    padding: 32rpx;
}

.btn--cancel {
    color: rgba(0, 0, 0, .6);
}

.btn--confirm {
    color: #0052d9;
}
